{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "types": [
      "vite/client", 
      "vite-plugin-svgr/client"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "components": [
        "./components"
      ]
    },
    "module": "commonjs",
    "target": "ES6",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    "build",
    "src/test",
    "example_app"
  ],
  "include": [
    "src"
  ]
}

